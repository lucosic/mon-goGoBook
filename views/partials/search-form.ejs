<!--Search form-->
<div class="max-w-md w-full">
    <div class="bg-white px-4 py-3 flex items-center justify border-t border-gray-200 sm:px-6 bg-gray-50">
        <form class="mt-8" action="/all-books" method="GET">
            <div class="rounded-md shadow-sm inline-flex">
                <div>
                    <input aria-label="Book search" name="bookSearch" type="text" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:z-10 sm:text-sm sm:leading-5" placeholder="Search a book">
                </div>
                <div class="ml-6">
                    <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out">
                        Search
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
